<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <!-- Activities. -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Splash screen. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
        <item name="android:windowFullscreen">true</item>
    </style>





    <!-- Songs. -->
    <style name="ThemeSongs" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimarySongs</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkSongs</item>
        <item name="colorAccent">@color/colorAccentSongs</item>
        <item name="android:windowBackground">@color/colorBackgroundSongs</item>
    </style>
    <!-- * * * -->

    <!-- Good news. -->
    <style name="ThemeGoodNews" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryGoodNews</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGoodNews</item>
        <item name="colorAccent">@color/colorAccentGoodNews</item>
        <item name="android:windowBackground">@color/colorBackgroundGoodNews</item>
    </style>
    <!-- * * * -->

    <!-- Вопрос-Ответ. -->
    <style name="ThemeAnsver" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryAnsver</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkAnsver</item>
        <item name="colorAccent">@color/colorAccentAnsver</item>
        <item name="android:windowBackground">@color/colorBackgroundAnsver</item>
    </style>
    <!-- * * * -->

    <style name="AppThemeBible" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryBible</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBible</item>
        <item name="colorAccent">@color/colorAccentBible</item>
    </style>

    <style name="AppThemeBible.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.ToolbarOverlay" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Toolbar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>


</resources>
