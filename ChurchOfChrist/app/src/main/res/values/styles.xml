<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#515151</item>
    </style>

    <style name="AppThemeSongs" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryChristianSongs</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkChristianSongs</item>
        <item name="colorAccent">@color/colorAccentChristianSongs</item>
    </style>

    <style name="AppThemeBible" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryBible</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBible</item>
        <item name="colorAccent">@color/colorAccentBible</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeSongs.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeBible.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.MainActivity">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorStatusBar</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.ToolbarOverlay" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Toolbar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">4dp</item>
        <item name="contentPaddingTop">4dp</item>
        <item name="contentPaddingLeft">4dp</item>
        <item name="contentPaddingRight">4dp</item>
        <item name="cardBackgroundColor">#ffffff</item>
    </style>

</resources>
