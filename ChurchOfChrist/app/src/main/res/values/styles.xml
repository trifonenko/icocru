<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- App. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#515151</item>
        <item name="android:windowBackground">@color/gray_light</item>
    </style>

    <!-- Good news. -->
    <style name="ThemeGoodNews" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryGoodNews</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGoodNews</item>
        <item name="colorAccent">@color/colorAccentGoodNews</item>
        <item name="android:windowBackground">@color/colorBackgroundGoodNews</item>
    </style>
    <!-- * * * -->

    <!-- Вопрос-Ответ. -->
    <style name="ThemeAnsver" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryAnsver</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkAnsver</item>
        <item name="colorAccent">@color/colorAccentAnsver</item>
        <item name="android:windowBackground">@color/colorBackgroundAnsver</item>
    </style>
    <!-- * * * -->

    <style name="AppThemeBible" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryBible</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBible</item>
        <item name="colorAccent">@color/colorAccentBible</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeBible.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.MainActivity">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorStatusBar</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.ToolbarOverlay" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Toolbar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>


</resources>
