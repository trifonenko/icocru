<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/idImageNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/description"
        android:padding="8dp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idTitleNews"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        card_view:layout_constraintEnd_toEndOf="@+id/idImageNews"
        card_view:layout_constraintStart_toStartOf="@+id/idImageNews"
        card_view:layout_constraintTop_toBottomOf="@+id/idImageNews"
        tools:text="Заголовок новости" />

</androidx.constraintlayout.widget.ConstraintLayout>