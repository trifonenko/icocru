    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.app.churchofchrist.christiansongs.ChristianSongsActivity">

    <include layout="@layout/toolbar" /><!-- Добавляем Toolbar в макет. -->

    <!-- Список, отображающий песни. -->


    <ListView
