<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <fragment
            android:id="@+id/idRandomVerseFragment"
            class="ru.app.churchofchrist.random_verse.RandomVerseFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            tools:layout="@layout/fragment_random_verse" />

        <fragment
            android:id="@+id/idNewsFragment"
            class="ru.app.churchofchrist.news.NewsFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            tools:layout="@layout/fragment_news" />

    </LinearLayout>
</ScrollView>